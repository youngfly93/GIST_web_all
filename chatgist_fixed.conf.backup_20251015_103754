server {
    listen 80;
    server_name chatgist.online www.chatgist.online;

    # 安全头
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    # 增加文件上传限制
    client_max_body_size 100M;

    # 主应用路由 - 指向前端服务 (可能是3000端口的ai-neon或其他前端服务)
    location / {
        proxy_pass http://172.16.0.7:3000;  # 先试试AI服务作为主页
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # API路由 - 指向后端服务
    location /api/ {
        proxy_pass http://172.16.0.7:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;

        # === Streaming/SSE settings ===
        proxy_http_version 1.1;           # keep connection for streaming
        proxy_buffering off;               # disable proxy buffering (critical for SSE)
        proxy_cache off;                   # no caching for streaming
        gzip off;                          # avoid gzip buffering for SSE
        add_header X-Accel-Buffering no always;   # hint Nginx to not buffer
        add_header Cache-Control no-cache;
    }

    # Shiny应用路由
    location /shiny/ {
        proxy_pass http://172.16.0.7:3838/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
        
        # WebSocket 支持
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # 健康检查
    location /health {
        proxy_pass http://172.16.0.7:8000/health;
        proxy_set_header Host $host;
    }

    # 备用健康检查 (如果上面的不工作)
    location /ping {
        access_log off;
        return 200 "pong\n";
        add_header Content-Type text/plain;
    }
} 